<%- include('../_partials/header.ejs') %>
<%- include('../_partials/navigation.ejs') %>

<h1 class="text-center">Add product</h1>

<div id="product-form" class="wrapper fadeInDown">
    <div id="formContent" class="auto-mg">
        <form action="/products/store?_csrf=<%= csrfToken %>" method="POST" id="add-product-form" 
            enctype="multipart/form-data">
            <div class="form-group mb-3 mt-3">
                <input type="text" class="form-control" id="product-name" name="name" placeholder="Name" maxlength="100" />
            </div>
            <div class="form-group mb-3 mt-3">
                <input type="number" class="form-control" id="product-price" name="price" placeholder="Price" />
            </div>
            <div class="form-group mb-3 mt-3">
                <input type="number" class="form-control" id="product-quantity" name="quantity" placeholder="Quantity" min="1" />
            </div>
            <div class="form-group mb-3 mt-3">
                <% if (!categories) { %>
                    <div class="err-message">Product needs at least one category.</div>
                <% } else { %>
                    <select class="form-control" name="category" id="category">
                        <option value="">Select a category</option>
                        <% for (let category of categories) { %>
                            <option value="<%= category.id %>"><%= capitalize(category.name) %></option>
                        <% } %>
                    </select>
                <% } %>
            </div>
            <div class="form-group mb-3 mt-3">
                <textarea name="description" id="description" cols="30" 
                    placeholder="Your product description here" rows="10"></textarea>
            </div>
            <div class="input-group mb-3 file-upload">
                <div class="input-group-prepend">
                    <span class="input-group-text">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" name="product_image" id="product_image">
                    <label class="custom-file-label text-left" for="product_image">Choose file</label>
                </div>
            </div>
            
            <input type="submit" class="fadeIn fourth" value="Add" />
        </form>
    </div>
</div>
    
<%- include('../_partials/footer.ejs') %>