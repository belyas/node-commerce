<%- include('../_partials/header.ejs') %>
<%- include('../_partials/navigation.ejs') %>

<div id="signinform" class="wrapper fadeInDown">
    <div id="formContent" class="auto-mg">
        <h2 class="fadeIn first form-title">Node Commerce</h2>
        
        <% if (errorMessage) {%>
            <div class="err-message"><%= errorMessage %></div>
        <% } %>
        <form action="/auth/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input type="text" id="email" class="fadeIn second" name="email" placeholder="Email address" required />
            <input type="password" id="password" class="fadeIn third" name="password" placeholder="Password"  required />
            <input type="submit" class="fadeIn fourth" value="Log In" />
        </form>
    
        <div class="formFooter">
            <a class="underlineHover" href="#">Don't have an account yet? <b>Signup</b></a>
        </div>
    
    </div>
</div>

<%- include('../_partials/footer.ejs') %>